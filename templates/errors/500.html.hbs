{{#*inline "page"}}
<div class="flex flex-col items-center justify-center py-10">
    <div class="text-center">
        <h1 class="text-9xl font-bold text-red-600">500</h1>
        <div class="mt-5">
            <i class="fas fa-rocket text-5xl text-red-700 animate-ping"></i>
        </div>
        <h2 class="text-4xl font-bold text-gray-700 mt-8">Server Error</h2>
        <p class="text-gray-600 mt-4 mb-8">Oops! Something went wrong on our end.</p>
        <div class="flex flex-col md:flex-row gap-4 justify-center">
            <a href="/" class="px-6 py-3 bg-indigo-600 hover:bg-indigo-700 text-white font-medium rounded-lg transition-colors duration-200 inline-flex items-center">
                <i class="fas fa-home mr-2"></i> Go Home
            </a>
            <button onclick="window.location.reload()" class="px-6 py-3 bg-gray-200 hover:bg-gray-300 text-gray-800 font-medium rounded-lg transition-colors duration-200 inline-flex items-center">
                <i class="fas fa-sync mr-2"></i> Retry
            </button>
        </div>
    </div>
    
    <div class="mt-16 max-w-lg w-full bg-white p-6 rounded-lg shadow-md">
        <h3 class="text-lg font-medium text-red-600 mb-3">
            <i class="fas fa-exclamation-triangle mr-2"></i> Technical Information
        </h3>
        <p class="text-gray-700 mb-4">
            The server encountered an internal error and was unable to complete your request.
        </p>
        <div class="bg-gray-100 p-3 rounded">
            <code class="text-sm text-gray-800">Error: {{error_message}}</code>
        </div>
        <p class="text-sm text-gray-600 mt-4">
            If the problem persists, please contact the site administrator.
        </p>
    </div>
</div>
{{/inline}}
{{~> layouts/base title="500 - Server Error"~}}

{{#*inline "page"}}
    <div class="bg-white rounded-lg shadow-md p-6 max-w-2xl mx-auto">
        <div class="flex items-center mb-4">
            <i class="fas fa-hand-peace text-2xl text-indigo-600 mr-3"></i>
            <h2 class="text-3xl font-bold text-indigo-700">Hello, {{name}}!</h2>
        </div>
        <p class="text-gray-700 mb-6">This is a greeting from the Rocket web server, styled with Tailwind CSS.</p>
        
        <div class="grid grid-cols-1 md:grid-cols-2 gap-4 mb-6">
            <div class="bg-indigo-50 p-4 rounded-lg border border-indigo-100">
                <h3 class="text-lg font-medium text-indigo-600 mb-2">Try a different name</h3>
                <p class="text-gray-600 mb-3">Visit /hello/&lt;name&gt; to see a custom greeting.</p>
                <div class="flex flex-wrap gap-2">
                    <a href="/hello/friend" class="inline-block bg-indigo-600 hover:bg-indigo-700 text-white text-sm font-medium py-1 px-3 rounded transition-colors duration-200">
                        friend
                    </a>
                    <a href="/hello/rocket" class="inline-block bg-indigo-600 hover:bg-indigo-700 text-white text-sm font-medium py-1 px-3 rounded transition-colors duration-200">
                        rocket
                    </a>
                    <a href="/hello/rust" class="inline-block bg-indigo-600 hover:bg-indigo-700 text-white text-sm font-medium py-1 px-3 rounded transition-colors duration-200">
                        rust
                    </a>
                </div>
            </div>
            
            <div class="bg-indigo-50 p-4 rounded-lg border border-indigo-100">
                <h3 class="text-lg font-medium text-indigo-600 mb-2">Navigation</h3>
                <p class="text-gray-600 mb-3">Return to the home page or explore more.</p>
                <a href="/" class="inline-block bg-indigo-600 hover:bg-indigo-700 text-white font-medium py-2 px-4 rounded transition-colors duration-200">
                    <i class="fas fa-home mr-2"></i> Back to Home
                </a>
            </div>
        </div>
        
        <div class="bg-yellow-50 border-l-4 border-yellow-400 p-4 rounded">
            <div class="flex">
                <div class="flex-shrink-0">
                    <i class="fas fa-lightbulb text-yellow-400"></i>
                </div>
                <div class="ml-3">
                    <p class="text-sm text-yellow-700">
                        Try clicking different links to explore the application.
                    </p>
                </div>
            </div>
        </div>
    </div>
{{/inline}}
{{~> base title=title~}}

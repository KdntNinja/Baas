{{#*inline "page"}}
    <div class="grid md:grid-cols-2 gap-8">
        <div class="bg-white rounded-lg shadow-md p-6 transition-transform duration-300 hover:scale-105">
            <h2 class="text-2xl font-bold text-indigo-700 mb-4">Welcome, {{name}}!</h2>
            <p class="text-gray-700">This is a simple Rocket web application powered by Tailwind CSS.</p>
            <div class="mt-4 bg-indigo-50 p-4 rounded-lg border border-indigo-100">
                <h3 class="text-lg font-medium text-indigo-600">Features</h3>
                <ul class="mt-2 pl-5 list-disc text-gray-600">
                    <li>Rocket web framework</li>
                    <li>Tailwind CSS styling</li>
                    <li>Alpine.js for interactivity</li>
                    <li>Responsive design</li>
                    <li>Dark mode support</li>
                </ul>
            </div>
        </div>
        <div x-data="{ open: false }" class="bg-white rounded-lg shadow-md p-6">
            <h2 class="text-2xl font-bold text-indigo-700 mb-4">Try it out</h2>
            <p class="text-gray-700 mb-4">Click the button below to see Alpine.js in action.</p>
            <button 
                @click="open = !open" 
                class="bg-indigo-600 hover:bg-indigo-700 text-white font-medium py-2 px-4 rounded transition-colors duration-200">
                Toggle Content
            </button>
            <div 
                x-show="open" 
                x-transition 
                class="mt-4 p-4 bg-indigo-50 rounded-lg border border-indigo-100">
                <p class="text-gray-700">This content is toggled using Alpine.js!</p>
            </div>
            <div class="mt-6">
                <a href="/hello/user" class="inline-block bg-indigo-600 hover:bg-indigo-700 text-white font-medium py-2 px-4 rounded transition-colors duration-200">
                    <i class="fas fa-arrow-right mr-2"></i> Try Hello Page
                </a>
            </div>
        </div>
    </div>
{{/inline}}
{{~> base title=title~}}
